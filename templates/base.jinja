<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
  <title>{% block title %}{% endblock %} | bridger</title>

  <link rel="icon" href="/assets/svg/favicon-32.png" sizes="32x32">
  <link rel="icon" href="/assets/svg/favicon-128.png" sizes="128x128">
  <link rel="icon" href="/assets/svg/favicon-180.png" sizes="180x180">
  <link rel="icon" href="/assets/svg/favicon-192.png" sizes="192x192">

  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
  <link rel="stylesheet" href="/assets/css/tailwind-output.css">

{% set textWidthParams = 'md:w-4/5 lg:w-3/4 xl:w-1/2 max-w-[100ch] m-auto' %}

{% macro par(text) %}
<p class="m-2 my-4">
{{ text }}
</p>
{% endmacro %}

{% macro h2(text) %}
<h2 class="text-xl font-bold m-2 my-4">
{{ text }}
</h2>
{% endmacro %}

{% macro navButton(text, href) %}
<li class="m-2 md:m-0 text-lg">
  <a href="{{ href }}">
  <div class="px-8 py-2 rounded-md bg-gradient-to-br from-sunset-orange to-sunset-blue hover:font-bold">
    {{ text }}
  </div>
  </a>
</li>
{% endmacro %}
</head>

<body class="text-zinc-100 bg-gray-900 md:lg-white">

<div>
{% block header %}
{% endblock %}
</div>

<div class="{{ textWidthParams }}">
{% block body %}
{% endblock %}
</div>

<footer class="text-xs">
{{ copyright_block }}
</footer>

<script src="/assets/js/jquery-3.4.1.min.js"></script>

{# Only include this if we're auto-reloading #}
{% if serve %}
<script>
window.onload = () => {
  const url = 'ws://localhost:8001'
  let ws = new WebSocket(url)
  ws.onopen = () => {
    console.log('Opened autoreload connection to ' + url);
    ws.onmessage = (msg) => {

      if (msg.data == 'Reload') {
        window.location.reload()
      }
    }
  }
}
</script>
{% endif %}

<script>
const button = document.querySelector('#menu-button'); // Hamburger Icon
const notMenu = document.querySelector('#not-menu'); // other contents in header
const menu = document.querySelector('#menu'); // Menu

button.addEventListener('click', () => {
  menu.classList.toggle('hidden');
  notMenu.classList.toggle('hidden');
});
</script>

<script>
// inspiration: https://www.ionos.com/digitalguide/e-mail/e-mail-security/protecting-your-email-address-how-to-do-it/
// ROT-13 to attempt to fool bots
function decode(a) {
  return a.replace(/[a-zA-Z]/g, function (c) {
    return String.fromCharCode((c <= "Z" ? 90 : 122) >= (c = c.charCodeAt(0) + 13) ? c : c - 26);
  })
}; 

const email = "oevqtre.t.urezna@tznvy.pbz";

const emailButtons = document.querySelectorAll('.copy-email');
for (const b of emailButtons) {
  b.addEventListener('click', (evt) => {
    let emailDecoded = decode(email);
    navigator.clipboard.writeText(emailDecoded);
    alert('Copied ' + emailDecoded);
  });
}
</script>
</body>
</html>
